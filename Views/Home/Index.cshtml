@model FakeAiChecker.Models.UploadViewModel
@{
    ViewData["Title"] = "AI Content Detector";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-robot me-2"></i>AI Content Detector
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>AI Content Detector</strong> - Upload files or archives to analyze content and determine if it was generated by AI or written by humans.
                    </div>

                    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="file" class="form-label fw-bold">Select File or Archive</label>
                            <input type="file" 
                                   class="form-control @(Html.ViewData.ModelState["File"]?.Errors.Count > 0 ? "is-invalid" : "")" 
                                   id="file" 
                                   name="File" 
                                   accept=".txt,.doc,.docx,.pdf,.zip,.rar,.7z,.tar,.gz,.env,.json,.xml,.yml,.yaml,.config,.ini,.properties"
                                   required>
                            @Html.ValidationMessageFor(m => m.File, "", new { @class = "invalid-feedback" })
                            <div class="form-text">
                                Supported formats: Documents (TXT, DOC, PDF), Archives (ZIP, RAR, 7Z), Config files (.env, JSON, XML, YAML)
                                <br>Maximum file size: 50MB
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Analyze Content
                            </button>
                        </div>
                    }

                    @if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Please correct the errors above and try again.
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="fas fa-shield-alt me-1"></i>
                        All uploads are securely processed and automatically deleted after analysis.
                    </small>
                </div>
            </div>            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-eye text-primary fa-2x mb-2"></i>
                            <h6>Content Analysis</h6>
                            <small class="text-muted">Detects AI vs Human content</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-brain text-info fa-2x mb-2"></i>
                            <h6>Machine Learning</h6>
                            <small class="text-muted">Advanced AI detection algorithms</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-archive text-success fa-2x mb-2"></i>
                            <h6>Archive Support</h6>
                            <small class="text-muted">Analyzes ZIP, RAR, and other archives</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
