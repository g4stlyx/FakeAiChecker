@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
}

<div class="container text-center" style="padding-top: 60px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-template">
                <h1 class="display-1 text-danger">500</h1>
                <h2 class="h3 mb-4">Internal Server Error</h2>
                <div class="error-details mb-4">
                    <p class="lead">Something went wrong on our end.</p>
                    <p class="text-muted">We're working to fix this issue. Please try again later or contact support if the problem persists.</p>
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-house"></i> Go Home
                    </a>
                    <button onclick="location.reload()" class="btn btn-outline-primary btn-lg me-2">
                        <i class="bi bi-arrow-clockwise"></i> Try Again
                    </button>
                    <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
                
                @if (Model?.ShowRequestId == true)
                {
                    <div class="mt-4">
                        <p class="text-muted small">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                        <p class="text-muted small">Please include this ID when contacting support.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }
    
    .error-template h1 {
        font-size: 8rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    
    .error-actions .btn {
        margin: 5px;
    }
    
    @@media (max-width: 768px) {
        .error-template h1 {
            font-size: 4rem;
        }
        
        .error-actions .btn {
            display: block;
            margin: 10px auto;
            width: 200px;
        }
    }
</style>
